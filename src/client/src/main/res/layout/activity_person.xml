<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.think.auto_assist.activities.PersonActivity">
<FrameLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/car">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="30dip">
        <FrameLayout
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginLeft="15dip">
            <ImageView
                android:id="@+id/userface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/default_face"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="5dip"
                android:textSize="20sp"
                android:text="我的昵称"/>
        </LinearLayout>
        <Button
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="0dip"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/back1"/>
    </LinearLayout>
    <!-- 简介 -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="#22000000"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:textColor="#ffffff"
            android:text="个人中心" />
    </LinearLayout>
</FrameLayout>

<LinearLayout
    android:id="@+id/car"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:layout_marginTop="16dip"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/more_item_press">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_marginLeft="15dip"
        android:textSize="20sp"
        android:text="我的车辆信息"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/arrow"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/order"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:layout_marginTop="16dip"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/more_item_press">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_marginLeft="15dip"
        android:textSize="20sp"
        android:text="我的预约订单"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/arrow"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/illegal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:layout_marginTop="16dip"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/more_item_press">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_marginLeft="15dip"
        android:textSize="20sp"
        android:text="我的违章信息"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/arrow"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/personal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:layout_marginTop="16dip"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/more_item_press">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_marginLeft="15dip"
        android:textSize="20sp"
        android:text="我的个人设置"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/arrow"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="16dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/more_item_press">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="italic"
            android:layout_marginLeft="15dip"
            android:textSize="20sp"
            android:text="我的个人音乐"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>

</LinearLayout>